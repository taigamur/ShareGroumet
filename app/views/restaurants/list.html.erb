<% provide(:title, "search restaurants")%>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
        
      <h2>検索キーワード</h2>
      <h2><%= params[:name]%></h2>
      
      <%= link_to "再度検索" , restaurants_home_path , class: 'back_button btn btn-default'%>
      
      <% if @api_params['ResultInfo']['Count'] == 0%>
        <p>検索結果がありません</p>
      <% else %>
        <ul class="nav nav-pills nav-stacked">
        <% @api_params['Feature'].each do |n| %>
          <li role="presentation">
            <%= link_to n['Name'] + n['Property']['Address'],  new_micropost_path(api_title: n['Name'] ,api_address: n['Property']['Address']) %>
          </li>
        <% end %>
        </ul>
      <% end %>
      

    </div>
  </div>
  
  
  